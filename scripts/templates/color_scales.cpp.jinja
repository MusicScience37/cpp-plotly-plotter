/*!
 * \file
 * \brief Implementation of functions of color scales.
 *
 * This file is generated from a template
 * scripts/templates/color_scales.h.jinja
 * using a script scripts/color_scale_util.py.
 */
#include "plotly_plotter/color_scales.h"

namespace plotly_plotter::color_scales {

{% for color_scale in data["color_scales"] %}

std::vector<std::pair<double, std::string>> {{ color_scale["name"] }}()
{
    return {
        {%- for normalized_value, color_code in color_scale["color_scale"] %}
        { {{ normalized_value }}, "{{ color_code }}" }, // NOLINT(*-magic-numbers)
        {%- endfor %}
    };
}

{% endfor %}

}  // namespace plotly_plotter::color_scales
